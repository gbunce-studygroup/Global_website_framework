<div class="container">
    <h1>Form components:</h1>
    <div class="row">
        <div class="col-md-4">
            <h4>Brochure download form:</h4>
            {% include "components/brochure_download_form" %}
        </div>
        <div class="col-md-4">
            <h4>Enquiry form:</h4>
            {% include "components/enquiry_form" %}
        </div>
        <div class="col-md-4">
            <!-- Chat from buttom -->
            {% include "components/chat_button" %}
            <h4>Find local agent form:</h4>
            {% include "components/find_local_agent" %}
            <h4>Newletter signup form:</h4>
            {% include "components/newsletter_signup_form" %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h4>Forms in modal popups:</h4>
            <div class="button">
                <a href="#" data-toggle="modal" data-target="#enquiry_form">Enquiry form</a>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="enquiry_form" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Enquiry form</h4>
                        </div>
                        <div class="modal-body">
                            {% include "components/enquiry_form" %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="button">
                <a href="#" data-toggle="modal" data-target="#brochure_download_form">Brochure download form</a>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="brochure_download_form" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Brochure download form</h4>
                        </div>
                        <div class="modal-body">
                            {% include "components/brochure_download_form" %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="button">
                <a href="#" data-toggle="modal" data-target="#newsletter_signup_form">Newsletter signup form</a>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="newsletter_signup_form" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Newsletter signup form</h4>
                        </div>
                        <div class="modal-body">
                            {% include "components/newsletter_signup_form" %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
